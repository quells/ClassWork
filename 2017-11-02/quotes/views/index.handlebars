<div id="quotes">
    {{#each quotes}}
    <div class="quote" id="quote-{{id}}">
        <blockquote>{{quote}}</blockquote>
        <p class="text-right">&mdash;{{author}}</p>
        <a href="#quote-{{id}}" class="edit-button">Edit</a>
    </div>
    {{/each}}
</div>

<div id="addQuote">
    <form>
        <div class="form-group">
            <label for="authorName-new">Author Name</label>
            <input type="text" name="author" id="authorName-new" class="form-control" placeholder="Author Name">
        </div>
        <div class="form-group">
            <label for="quoteText-new">Author Name</label>
            <textarea name="quote" id="quoteText-new" class="form-control" placeholder="Quote Text"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>
</div>
